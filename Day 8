#include <iostream>
using namespace std;

int main() {
    // Using for loop
    cout << "Using for loop:" << endl;
    for (int i = 1; i <= 10; i++) {
        cout << i << " ";
    }
    cout << endl;

    // Using while loop
    cout << "Using while loop:" << endl;
    int j = 1;
    while (j <= 10) {
        cout << j << " ";
        j++;
    }
    cout << endl;

    // Using do-while loop
    cout << "Using do-while loop:" << endl;
    int k = 1;
    do {
        cout << k << " ";
        k++;
    } while (k <= 10);
    cout << endl;

    return 0;
}
